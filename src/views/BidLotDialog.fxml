<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="views.BidLotDialog">

    <headerText>Please select value to Bid Lot</headerText>

    <content>
        <GridPane hgap="10" vgap="10">

            <Label text="Index: " GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="indexField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <Label text="Seller: " GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextField fx:id="sellerField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <Label text="Name: " GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <TextField fx:id="titleField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <Label text="Description: " GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <TextArea fx:id="descriptionField" GridPane.columnIndex="1" GridPane.rowIndex="3" prefHeight="100.0" prefWidth="200.0" wrapText="true" />

            <Label text="Price: " GridPane.columnIndex="0" GridPane.rowIndex="4" />
            <TextField fx:id="priceField" GridPane.columnIndex="1" GridPane.rowIndex="4" />

            <Label text="Bid: " GridPane.columnIndex="0" GridPane.rowIndex="5" />
            <TextField fx:id="bitField" GridPane.columnIndex="1" GridPane.rowIndex="5" />

            <Label fx:id="label_status" GridPane.columnIndex="1" GridPane.rowIndex="6" />

        </GridPane>
    </content>

</DialogPane>
